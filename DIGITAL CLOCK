#include<stdio.h>
#include<conio.h>
void main()
{
    int h=4;
    int m=8;
    int s=0;
    while(1)
    {
        printf("\n\n\t\t%02d:%02d",h,m,s);
        sleep(1);
        system("cls");
        s=s+1;
        if(s==60)
        {
            s=0;
            m=m+1;
        }
        else if(m==60)
        {
            m=0;
            s=0;
            h=s+1;
        }
         else if(h==12)
         {
             s=0;
             m=m+1;
         }
         else if(m==60)
         {
             m=0;
             s=0;
             h=s+1;
         }
         else if(h==12)
         {
             s=0;
             m=0;
             s=0;
         }
        }
    }
